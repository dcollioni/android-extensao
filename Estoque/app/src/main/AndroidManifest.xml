<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.administrador.estoque" >

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".CategoriaActivity"
            android:label="@string/title_activity_categoria" >
        </activity>
        <activity
            android:name=".ProdutoActivity"
            android:label="@string/title_activity_produto"
            android:parentActivityName=".CategoriaActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.administrador.estoque.CategoriaActivity" />
        </activity>
        <activity
            android:name=".DetalheActivity"
            android:label="@string/title_activity_detalhe" >
        </activity>
    </application>

</manifest>
